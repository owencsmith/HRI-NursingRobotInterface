<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="prefix" default="tb3/"/>
  <arg name="odom_frame" default="$(arg prefix)odom"/>
  <arg name="scan" default="base_scan"/>
  <arg name="base_frame" default="$(arg prefix)base_footprint"/>
  <arg name="cmd_vel" default="base_controller/cmd_vel"/>
  <arg name="laser_frame" default="$(arg prefix)laser_link"/>

  <!-- AMCL Node-->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <!-- Change param under namespace -->
    <param name="use_map_topic" value="true"/>
    <remap from="map" to="/map"/>
    <remap from="scan" to="$(arg scan)"/>

    <!-- Filter-->
    <param name="min_particles"         value="20"/>
    <param name="max_particles"         value="200"/>
    <param name="update_min_d"          value="0.25"/>
    <param name="update_min_a"          value="0.1"/>

    <param name="odom_model_type"       value="diff-corrected"/>
    <param name="odom_frame_id"         value="$(arg odom_frame)"/>
    <param name="base_frame_id" 	value="$(arg base_frame)"/>
    <param name="global_frame_id"       value="/map"/>

  </node>


  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="cmd_vel" to="$(arg cmd_vel)"/>
    <remap from="map" to="/map"/>

    <!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" -->
    <rosparam file="$(find middleman)/config/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" subst_value="true"/>
    <rosparam file="$(find middleman)/config/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" subst_value="true"/>
    <rosparam file="$(find middleman)/config/local_costmap_params_$(arg model).yaml" command="load" subst_value="true"/>
    <rosparam file="$(find middleman)/config/global_costmap_params_$(arg model).yaml" command="load" subst_value="true"/>
    <rosparam file="$(find turtlebot3_navigation)/param/move_base_params.yaml" command="load" />
    <!--rosparam file="$(find turtlebot3_navigation)/param/dwa_local_planner_params_$(arg model).yaml" command="load" -->
    <!--remap from="odom" to="$(arg odom_frame)"-->

  </node>
</launch>
